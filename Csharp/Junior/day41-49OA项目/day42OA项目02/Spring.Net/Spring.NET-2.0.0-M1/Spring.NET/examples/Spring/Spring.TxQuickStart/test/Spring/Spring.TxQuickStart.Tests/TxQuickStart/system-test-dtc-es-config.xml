         xmlns:tx="http://www.springframework.net/tx">


  <!-- Imports application configuration -->
  <import resource="assembly://Spring.TxQuickStart/Spring.TxQuickStart/application-config.xml"/>
  
  <!-- Imports additional aspects -->
